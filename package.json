{
  "name": "deskgpt",
  "version": "1.0.0",
  "description": "A desktop client for OpenAI's ChatGPT.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "node --check src/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "OpenAI",
    "ChatGPT",
    "Electron",
    "desktop",
    "client",
    "AI",
    "chatbot",
    "GPT",
    "wrapper",
    "GUI"
  ],  
  "author": {
    "name": "Iman Reihanian",
    "email": "ireihani@uci.edu"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "license": "GPL-3.0-only",
  "build": {
    "appId": "com.iman.deskgpt",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ],
      "icon": "img/robot-icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "img/robot-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "img/robot-icon.png"
    },
    "files": [
      "src/**",
      "img/**"
    ]
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}
